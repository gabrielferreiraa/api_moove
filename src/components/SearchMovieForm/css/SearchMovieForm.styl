@import '~css/default'

.title
    font-family $font
    font-weight 700
    color #FFF
    text-align center
    font-size 3em
    &:after
        content 'Made with \f004 by Gabriel Ferreira'
        display block
        text-align center
        font-size .25em
        font-family $font, FontAwesome, sans-serif
        font-weight 200
        animation changeIcon 4s ease infinite

.btnSearch
    width 40px
    height 42px
    background transparent
    border 1px solid #FFF
    color #FFF
    cursor pointer
    margin-left -1px
    outline none
    transition background 200ms ease
    &:hover
        background #FFF
        color #2980b9

.inputGroup
    display flex
    justify-content center
    align-items center
    width 100%
    input
        height 40px
        width 15%
        text-align center
        font-size 1.2em
        outline none
        border-radius 0
        padding 0 10px 0 10px
        background transparent
        color white
        border 1px solid white
        &::-webkit-input-placeholder
            color #FFF
            opacity .8

@keyframes changeIcon
    0%
        content 'Made with \f004 by Gabriel Ferreira'
    50%
        content 'Made with \f0e7 by Gabriel Ferreira'
    100%
        content 'React - Redux - Webpack - CSS Modules - Babel'

@media screen and (max-width: 768px)
     .inputGroup
        input
           width 60%