.closeButton
    height 50px
    width 50px
    position absolute
    box-sizing border-box
    line-height 50px
    display inline-block
    background transparent
    border none
    outline none
    margin-left 10px
    cursor pointer

.closeButton
    &:before,
    &:after
        transform rotate(-45deg)
        content ''
        position absolute
        top 50%
        left 50%
        margin-top -5px
        margin-left -25px
        display block
        height 5px
        width 25px
        background-color #FFF
        transition transform 200ms ease
    &:hover
        &:before,
        &:after
            transform rotate(0deg)

.closeButton
    &:after
        transform rotate(45deg)


